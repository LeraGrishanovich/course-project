<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="880.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cinema_client.controller.FilmStatisticController">
   <children>
      <BarChart fx:id="barChart" layoutX="73.0" layoutY="58.0" prefHeight="386.0" prefWidth="734.0">
        <xAxis>
          <CategoryAxis label="Фильмы" side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis label="В среднем куплено билетов на сеанс" minorTickCount="10" side="LEFT" upperBound="9.0">
               <tickLabelFont>
                  <Font size="12.0" />
               </tickLabelFont>
            </NumberAxis>
        </yAxis>
      </BarChart>
      <Button fx:id="backButton" focusTraversable="false" layoutX="14.0" layoutY="460.0" mnemonicParsing="false" onAction="#onFilmsButtonClick" prefHeight="26.0" prefWidth="120.0" text="Назад">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
